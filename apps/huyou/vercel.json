{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ../.. && pnpm turbo run build --filter=@app/huyou",
  "devCommand": "cd ../.. && pnpm turbo run dev --filter=@app/huyou",
  "installCommand": "cd ../.. && pnpm install",
  "regions": ["nrt1"],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}